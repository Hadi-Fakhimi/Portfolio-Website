@model Resume.Domain.ViewModels.SocialMedia.CreateOrEditSocialMediaViewModel

@{
    bool isCreate = Model.Id == 0 ? true : false;
}


<form id="SocialMediaForm" asp-area="Admin" asp-controller="SocialMedia" asp-action="SubmitSocialMediaFormModal"
      data-ajax="true" data-ajax-begin="StartLoading()" data-ajax-success="SocialMediaFormSubmited">

    <div class="row">
        <div class="col-12">
            @if (!isCreate)
            {
                <input type="hidden" asp-for="Id" />
            }

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">@(isCreate ? "افزودن" : "ویرایش")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label asp-for="Icon"></label>
                    <div class="controls">
                        <input type="text" asp-for="Icon" class="form-control">
                    </div>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Link"></label>
                    <div class="controls">
                        <input type="text" asp-for="Link" class="form-control">
                    </div>
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Order"></label>
                    <div class="controls">
                        <input type="number" asp-for="Order" class="form-control">
                    </div>
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary @(isCreate ? "btn-success" : "btn-warning")">@(isCreate ? "افزودن" : "ویرایش")</button>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">خروج</button>
                </div>
            </div>
        </div>
    </div>


</form>



