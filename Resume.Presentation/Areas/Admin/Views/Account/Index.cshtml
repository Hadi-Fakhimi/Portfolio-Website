@model List<UserViewModel>
@using Resume.Domain.ViewModels.Account
@using Resume.Application.StaticTools

@{
    ViewData["Title"] = "لیست کاربر ادمین";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">@ViewData["Title"]</h3>
        </div>
        <div class="right-title">
            <!-- Button trigger modal -->
            <button type="button" onclick="LoadUserAdminFormModal(0)" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                افزودن به لیست
            </button>
        </div>

    </div>
</div>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-hover no-wrap data_table" id="data-table-box">
                            <thead>
                                <tr class="bg-secondary">
                                    <th>آواتار</th>
                                    <th>تاریخ ثبت</th>
                                    <th>نام</th>
                                    <th>نام خانوادگی</th>
                                    <th>ایمیل</th>
                                    <th>کلمه عبور</th>
                                    <th>ادمین</th>
                                    <th>soft delete</th>
                                    <th>تايید ایمیل</th>
                                    <th>شماره تلفن</th>
                                    <th>توضیحات</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null && Model.Any())
                                {
                                    @foreach (UserViewModel item in Model)
                                    {
                                        <tr id="list-thing-@item.Id">
                                            <td><img src="@(string.IsNullOrEmpty(item.Avatar) ? FilePaths.DefaultAvatar : $"{FilePaths.UserAvatarImg}{item.Avatar}")" width="70" height="70" /></td>
                                            <td>@item.CreateDate</td>
                                            <td>@item.FirstName</td>
                                            <td>@item.LastName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Password</td>
                                            <td>@item.IsAdmin</td>
                                            <td>@item.IsDelete</td>
                                            <td>@item.IsEmailConfirmed</td>
                                            <td>@item.PhoneNumber</td>
                                            <td>@item.Description</td>
                                            <td>

                                                <button onclick="LoadUserAdminFormModal(@item.Id)" type="button" class="btn btn-warning">ویرایش</button>
                                                <button onclick="DeleteUserAdmin(@item.Id)" type="button" class="btn btn-danger">حذف</button>

                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->
