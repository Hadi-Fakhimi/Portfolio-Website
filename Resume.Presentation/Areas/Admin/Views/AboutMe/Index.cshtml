@model AboutMeViewModel
@using Resume.Domain.ViewModels.AboutMe

@{
    ViewData["Title"] = "درباره من";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">@ViewData["Title"]</h3>
        </div>
        <div class="right-title">
            <!-- Button trigger modal -->
            <button type="button" onclick="LoadAboutMeFormModal(0)" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                افزودن به لیست
            </button>
        </div>

    </div>
</div>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-hover no-wrap data_table" id="data-table-box">
                            <thead>
                                <tr class="bg-secondary">
                                    <th>عنوان</th>
                                    <th>پاراگراف-۱</th>
                                    <th>پاراگراف-۲</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null)
                                {
                                    <tr id="list-thing-@Model.Id">
                                        <td>@Model.title</td>
                                        <td>@Model.paragraf1</td>
                                        <td>@Model.paragraf2</td>
                                        <td>

                                            <button onclick="LoadAboutMeFormModal(@Model.Id)" type="button" class="btn btn-warning">ویرایش</button>
                                            <button onclick="DeleteAboutMe(@Model.Id)" type="button" class="btn btn-danger">حذف</button>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->
