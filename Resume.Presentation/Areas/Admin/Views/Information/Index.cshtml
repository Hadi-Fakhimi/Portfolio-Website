@model InformationViewModel
@using Resume.Application.StaticTools
@using Resume.Domain.ViewModels.Information

@{
    ViewData["Title"] = "اطلاعات";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">@ViewData["Title"]</h3>
        </div>
        <div class="right-title">
            <!-- Button trigger modal -->
            <button type="button" onclick="LoadInformationFormModal(0)" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                افزودن به لیست
            </button>
        </div>

    </div>
</div>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-hover no-wrap data_table" id="data-table-box">
                            <thead>
                                <tr class="bg-secondary">
                                    <th>آواتار</th>
                                    <th>نام</th>
                                    <th>آدرس</th>
                                    <th>ایمیل</th>
                                    <th>شماره تلفن</th>
                                    <th>فایل رزومه</th>
                                    <th>تاریخ تولد</th>
                                    <th>آدرس اینستاگرام</th>
                                    <th>آدرس تلگرام</th>
                                    <th>شغل</th>
                                    <th>اسکریپ نقشه</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null)
                                {

                                    <tr id="list-thing-@Model.Id">
                                        <td><img src="@(string.IsNullOrEmpty(Model.Avatar) ? FilePaths.DefaultAvatar : $"{FilePaths.AvatarImg}{Model.Avatar}")" width="50" height="50" style="border-radius:50%;" /></td>
                                        <td>@Model.Name</td>
                                        <td>@Model.Address</td>
                                        <td>@Model.Email</td>
                                        <td>@Model.Phone</td>
                                        <td>@Model.ResumeFile</td>
                                        <td>@Model.DateOfBirth</td>
                                        <td>@Model.InstagramAddress</td>
                                        <td>@Model.TelegramAddress</td>
                                        <td>@Model.Job</td>
                                        <td><iframe src="@Model.MapSrc" width="250" height="120" style="border-radius:2rem;border:none;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></td>
                                        <td>

                                            <button onclick="LoadInformationFormModal(@Model.Id)" type="button" class="btn btn-warning">ویرایش</button>
                                            <button onclick="DeleteInformation(@Model.Id)" type="button" class="btn btn-danger">حذف</button>

                                        </td>
                                    </tr>




                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->
