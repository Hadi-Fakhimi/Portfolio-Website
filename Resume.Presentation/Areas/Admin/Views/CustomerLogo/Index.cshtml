@model List<CustomerLogoListViewModel>
@using Resume.Domain.ViewModels.CustomerLogo
@using Resume.Application.StaticTools

@{
    ViewData["Title"] = "لیست موسسه ها";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">@ViewData["Title"]</h3>
        </div>
        <div class="right-title">
            <!-- Button trigger modal -->
            <button type="button" onclick="LoadCustomerLogoFormModal(0)" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                افزودن به لیست
            </button>
        </div>

    </div>
</div>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-hover no-wrap data_table" id="data-table-box">
                            <thead>
                                <tr class="bg-secondary">
                                    <th>لوگو</th>
                                    <th>alt</th>
                                    <th>لینک</th>
                                    <th>الویت</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null && Model.Any())
                                {
                                    @foreach (CustomerLogoListViewModel item in Model)
                                    {
                                        <tr id="list-thing-@item.Id">
                                            <td><img src="@(string.IsNullOrEmpty(item.Logo) ? FilePaths.DefaultAvatar : $"{FilePaths.CustomerLogoImg}{item.Logo}")" width="70" height="70" /></td>
                                            <td>@item.LogoAlt</td>
                                            <td>@item.Link</td>
                                            <td>@item.Order</td>
                                            <td>

                                                <button onclick="LoadCustomerLogoFormModal(@item.Id)" type="button" class="btn btn-warning">ویرایش</button>
                                                <button onclick="DeleteCustomerLogo(@item.Id)" type="button" class="btn btn-danger">حذف</button>

                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->
